#!/usr/bin/env bash

if [[ -z "$1" ]]; then
    echo "provide an argument"
    exit 1
fi

if [[ "$1" != "both" && "$1" != "hdmi" && "$1" != "integrated" ]]; then
    echo "arg should be 'both' | 'hdmi' | 'integrated'"
fi

if [[ "$1" == "both" ]]; then
    xrandr --output eDP-1 --auto --right-of HDMI-1
    xrandr --output HDMI-1 --primary --auto
fi

if [[ "$1" == "hdmi" ]]; then
    xrandr --output HDMI-1 --primary --auto
    xrandr --output eDP-1 --off
fi

if [[ "$1" == "integrated" ]]; then
    xrandr --output HDMI-1 --off
    xrandr --output eDP-1 --primary --auto
fi
